|| Using Strcut keyword||

 #include<bits/stdc++.h>

 using namespace std;

// Creating user define data types using class keyword

struct Node{
    // Properties of an Object
    int data;
    Node* next;
    // Constructor calling 
    Node(int data){
        this->data=data; 
        this->next=NULL;
    }
};

int main(){
      // dynamically Creating the Node of linked list
      // this will call Constructor in Class
      // New a key word which comes with Delete(Operator)
      Node*node1=new Node(10);
      cout<<node1->data<<endl;
      cout<<node1->next<<endl;
}

|| Using class Keyword||

 #include<bits/stdc++.h>

 using namespace std;

// Creating user define data types using class keyword
class Node{
    public:
    // Properties of an Object
    int data;
    Node* next;
    // Constructor calling 
    Node(int data){
        this->data=data; 
        this->next=NULL;
    }
};

int main(){
      // dynamically Creating the Node of linked list
      // this will call Constructor in Class
      // New a key word which comes with Delete(Operator)
      Node*node1=new Node(10);
      cout<<node1->data<<endl;
      cout<<node1->next<<endl;
}
